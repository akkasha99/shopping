<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Admin Dashboard</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <meta content="" name="description"/>
  <meta content="" name="author"/>
</head>
<body class="login">

<% resource_name = :user %>
<%= form_for(User.new, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form class="login-form" action="" method="post">
      <h3 class="form-title">Login to your account</h3>

      <button class="close" data-close="alert"></button>
            <span>
            Enter any username and password. </span> <br>
      <label class="control-label visible-ie8 visible-ie9">Username</label>

      <%= f.email_field :email, autofocus: true, :class => "form-control placeholder-no-fix", :placeholder => "Username" %>
      <label class="control-label visible-ie8 visible-ie9">Password</label>

      <%= f.password_field :password, autocomplete: "off", :class => "form-control placeholder-no-fix", :placeholder => "Password" %>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <%= f.submit "Sign in", :class => "btn green pull-right" %>
    </form>
<% end %>
</body>
</html>
<style>
    body {
        color: #000000
    }
</style>